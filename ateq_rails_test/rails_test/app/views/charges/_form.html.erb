<%= form_for @charge, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :paid, :class => 'control-label' if !controller.action_name.eql?("new") %>
    <div class="controls">
      <%= f.text_field :paid, :class => 'text_field' if !controller.action_name.eql?("new")%>
      <%= f.hidden_field :paid, :value => "true" if controller.action_name.eql?("new") %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :currency, :class => 'control-label' %>
    <div class="controls">
      <%= select_tag "currency", "<option>usd</option><option>gbp</option><option>eur</option><option>inr</option>".html_safe %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :customer_id, :class => 'control-label' %>
    <div class="controls">
      <%#= f.text_field :customer_id, :class => 'text_field' %>
      <%= f.select("customer", customers_list.collect {|r| [ r.firstname, r.id ] }) %>

    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                charges_path, :class => 'btn' %>
  </div>
<% end %>
